from pybricks.hubs import PrimeHub
from pybricks.pupdevices import Motor, ColorSensor, UltrasonicSensor, ForceSensor
from pybricks.parameters import Button, Color, Direction, Port, Side, Stop
from pybricks.robotics import DriveBase
from pybricks.tools import wait, StopWatch

hub = PrimeHub()

left_motor  = Motor(Port.B, Direction.CLOCKWISE)
right_motor = Motor(Port.F, Direction.COUNTERCLOCKWISE)
motor_gear1 = Motor(Port.D, Direction.CLOCKWISE)
motor_gear2 = Motor(Port.A, Direction.CLOCKWISE)
drive_base = DriveBase(left_motor, right_motor, wheel_diameter=56, axle_track=112)
#drive_base.use_gyro(True)
motor_gear1.run(490)
drive_base.turn(-45)
drive_base.straight(430)
drive_base.turn(45)
drive_base.straight(310)
drive_base.turn(60)
drive_base.straight(35)

